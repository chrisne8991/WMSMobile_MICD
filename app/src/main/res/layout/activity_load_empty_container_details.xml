<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoadEmptyContainerDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/load_empty_container"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/load_empty_container" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/take_photo"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/take_photo" />

    <Button
        android:id="@+id/LoadEmptyContainerDetailsActivity_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="@string/photo_container_1"
        android:textColor="@android:color/white"
        android:tag="btn1"
        android:onClick="btn_Clicked"
        android:textStyle="bold" />
    <Button
        android:id="@+id/LoadEmptyContainerDetailsActivity_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="@string/photo_container_2"
        android:textColor="@android:color/white"
        android:tag="btn2"
        android:onClick="btn_Clicked"
        android:textStyle="bold" />
    <Button
        android:id="@+id/LoadEmptyContainerDetailsActivity_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="@string/truck_registration"
        android:textColor="@android:color/white"
        android:tag="btn3"
        android:onClick="btn_Clicked"
        android:textStyle="bold" />
    <Button
        android:id="@+id/LoadEmptyContainerDetailsActivity_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="@string/yard_clerk"
        android:textColor="@android:color/white"
        android:tag="btn4"
        android:onClick="btn_Clicked"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gate_in_document_number"
            tools:text="@string/gate_in_document_number"/>
        <EditText
            android:id="@+id/LoadEmptyContainerDetailsActivity_txtGateInNumber"
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_edittext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/LoadEmptyContainerDetailsActivity_btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:nextFocusLeft="@+id/CargoDispatch1_btnBack"
            android:nextFocusRight="@+id/CargoDispatch1_btnBack"
            android:nextFocusUp="@+id/CargoDispatch1_btnBack"
            android:nextFocusDown="@+id/CargoDispatch1_btnBack"
            android:nextFocusForward="@+id/CargoDispatch1_btnBack"
            android:onClick="btnBack_Clicked"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/LoadEmptyContainerDetailsActivity_btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:nextFocusLeft="@+id/CargoDispatch1_btnNext"
            android:nextFocusRight="@+id/CargoDispatch1_btnNext"
            android:nextFocusUp="@+id/CargoDispatch1_btnNext"
            android:nextFocusDown="@+id/CargoDispatch1_btnNext"
            android:nextFocusForward="@+id/CargoDispatch1_btnNext"
            android:onClick="btnNext_Clicked"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>