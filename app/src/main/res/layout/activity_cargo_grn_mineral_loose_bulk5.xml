<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CargoGrnMineralLooseBulk5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/cargo_goods_receipt"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/cargo_goods_receipt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/take_photo"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/take_photo" />

    <Button
        android:id="@+id/CargoGrnMineralLooseBulk5_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:onClick="CargoGrnMineralLooseBulk5_btn_Clicked"
        android:tag="CargoGrnMineralLooseBulk5_btn1"
        android:text="@string/trailer_a_cargo_tipped"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="@string/trailer_a_cargo_tipped" />

    <Button
        android:id="@+id/CargoGrnMineralLooseBulk5_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:onClick="CargoGrnMineralLooseBulk5_btn_Clicked"
        android:tag="CargoGrnMineralLooseBulk5_btn2"
        android:text="@string/trailer_a_cargo_empty_bins"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="@string/trailer_a_cargo_empty_bins" />

    <Button
        android:id="@+id/CargoGrnMineralLooseBulk5_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:onClick="CargoGrnMineralLooseBulk5_btn_Clicked"
        android:tag="CargoGrnMineralLooseBulk5_btn3"
        android:text="@string/trailer_b_cargo_tipped"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CargoGrnMineralLooseBulk5_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:onClick="CargoGrnMineralLooseBulk5_btn_Clicked"
        android:tag="CargoGrnMineralLooseBulk5_btn4"
        android:text="@string/trailer_b_cargo_empty_bins"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="@string/trailer_b_cargo_empty_bins" />

    <Button
        android:id="@+id/CargoGrnMineralLooseBulk5_btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:onClick="CargoGrnMineralLooseBulk5_btn_Clicked"
        android:tag="CargoGrnMineralLooseBulk5_btn5"
        android:text="@string/mineral_loose_tally_clerk"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/comments"
        tools:text="@string/comments"/>

    <EditText
        android:id="@+id/CargoGrnMineralLooseBulk5_txtComments"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:enabled="true"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CargoGrnMineralLooseBulk5_btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:nextFocusLeft="@+id/grn_btnBack"
            android:nextFocusRight="@+id/grn_btnBack"
            android:nextFocusUp="@+id/grn_btnBack"
            android:nextFocusDown="@+id/grn_btnBack"
            android:nextFocusForward="@+id/grn_btnBack"
            android:onClick="CargoGrnMineralLooseBulk5_btnBack_Clicked"
            android:text="@string/back"

            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CargoGrnMineralLooseBulk5__btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:nextFocusLeft="@+id/grn_btnNext"
            android:nextFocusRight="@+id/grn_btnNext"
            android:nextFocusUp="@+id/grn_btnNext"
            android:nextFocusDown="@+id/grn_btnNext"
            android:nextFocusForward="@+id/grn_btnNext"
            android:onClick="CargoGrnMineralLooseBulk5_btnNext_Clicked"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>